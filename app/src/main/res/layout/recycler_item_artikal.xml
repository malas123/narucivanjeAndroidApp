<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:layout_margin="2dp"
    android:id="@+id/parent_layout"

   >

    <TextView
        android:id="@+id/tv_tip_artikla"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center_horizontal"
        android:text="PICA"
        android:textColor="@color/white"
        android:visibility="visible"
        android:textSize="19sp"

        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/empty_rect">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:id="@+id/img"
                android:src="@color/colorPrimaryDark"
                android:layout_marginStart="5dp"/>
                <LinearLayout android:layout_margin="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_naziv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:text="Naziv jela"
                        android:textColor="#000"
                        android:textSize="17sp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_opis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primjer opisa jela"
                        android:textStyle="italic" />

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinner_porcije"
                                android:spinnerMode="dropdown"
                                android:layout_margin="5dp"
                                style="@style/mySpinnerItemStyle"

                                />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_dodaj"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/btn_dodaj" />
            </LinearLayout>



</LinearLayout>

