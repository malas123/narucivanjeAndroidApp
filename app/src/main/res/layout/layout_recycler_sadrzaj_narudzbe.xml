<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:id="@+id/parent_layout"
    android:background="@drawable/empty_rect">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="70sp"
        android:id="@+id/narudzba_img"
        android:src="@color/colorPrimaryDark"
        android:layout_marginStart="5dp"/>
    <LinearLayout android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_naziv_jela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:text="Naziv jela"
            android:textColor="#000"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_cijena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cijena: 5 KM"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold|italic"/>
        />
        <!--

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_porcije"
            android:spinnerMode="dropdown"
            android:layout_margin="5dp"
            ></Spinner>
            -->
    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_ukloni"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_ukloni"
        android:layout_marginRight="15dp"/>
</LinearLayout>

